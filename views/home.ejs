<html>
    <head>
        <title>
            <%= title%>
        </title>
    </head>
    <body>
        <h1>todolist</h1>
        <div>
            <ul>
                <% for(let i of task_list){ %>
                    <li>
                        <p><%= i.task%></p>
                    </li>
                <% }%>
            </ul>
        </div>
        <form action="/add_task" method="POST">
            <input type="text" name="task" placeholder="Enter the task">
            <button type="submit">add</button>
        </form>
    </body>
</html>